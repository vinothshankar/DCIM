    function zoomin() {
        var GFG = document.getElementById("dImage");
        var currHeight = GFG.clientHeight;
        var currWidth = GFG.clientWidth;
        GFG.style.height = (currHeight + 30) + "px";
        GFG.style.width = (currWidth + 100) + "px";
    }
    function zoomout() {
        var GFG = document.getElementById("dImage");
        var currHeight = GFG.clientHeight;
        var currWidth = GFG.clientWidth;
        GFG.style.height = (currHeight - 30) + "px";
        GFG.style.width = (currWidth - 100) + "px";
    }
